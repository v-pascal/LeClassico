<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:theme="@style/ShortcutMainTheme"
              android:orientation="horizontal"
              android:focusableInTouchMode="true"
              android:layout_width="match_parent"
              android:layout_height="@dimen/shortcut_content_height"
              tools:context="com.studio.artaban.leclassico.activities.main.ShortcutFragment">

    <!-- Start date & time -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_start_date"
        android:gravity="center"
        android:layout_width="@dimen/shortcut_content_height"
        android:layout_height="@dimen/shortcut_content_height">

        <TextView
            android:id="@+id/start_date"
            android:text="@string/no_date"
            android:layout_margin="@dimen/shortcut_border_margin"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:textSize="@dimen/shortcut_date_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/start_time"
            android:text="@string/no_time"
            android:layout_margin="@dimen/shortcut_border_margin"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:textSize="@dimen/shortcut_date_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Icon -->
    <ImageView
        android:id="@+id/image_icon"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/shortcut_content_height"
        android:layout_height="@dimen/shortcut_content_height"/>

    <!-- Message & info -->
    <RelativeLayout
        android:id="@+id/layout_data"
        android:paddingStart="@dimen/shortcut_text_margin"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_message"
            android:textSize="@dimen/shortcut_text_size"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shortcut_text_height"/>
        <ImageView
            android:id="@+id/image_type"
            android:visibility="gone"
            android:tint="@android:color/black"
            android:src="@drawable/ic_notifications_off_white_18dp"
            android:scaleType="center"
            android:layout_marginEnd="@dimen/shortcut_tiny_text_margin"
            android:layout_below="@id/text_message"
            android:layout_width="@dimen/shortcut_info_height"
            android:layout_height="@dimen/shortcut_info_height"/>
        <TextView
            android:id="@+id/text_info"
            android:layout_toEndOf="@id/image_type"
            android:layout_below="@id/text_message"
            android:textSize="@dimen/shortcut_info_size"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shortcut_text_height"/>

    </RelativeLayout>

    <!-- Search -->
    <LinearLayout
        android:id="@+id/layout_search"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@drawable/search_background"
        android:layout_marginStart="@dimen/shortcut_text_margin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/shortcut_content_height">

        <EditText
            android:id="@+id/edit_search"
            android:hint="@string/pseudo"
            android:textColorHint="@color/colorPublication"
            android:textColor="@android:color/white"
            android:inputType="text"
            android:visibility="invisible"
            android:layout_margin="@dimen/shortcut_border_margin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/button_search"
            android:src="@drawable/ic_search_white_36dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/shortcut_border_margin"
            android:onClick="onSearch"
            android:layout_width="@dimen/shortcut_content_height"
            android:layout_height="@dimen/shortcut_content_height"/>

    </LinearLayout>

    <!-- End date & time -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_end_date"
        android:gravity="center"
        android:layout_width="@dimen/shortcut_content_height"
        android:layout_height="@dimen/shortcut_content_height">

        <TextView
            android:id="@+id/end_date"
            android:layout_margin="@dimen/shortcut_border_margin"
            android:text="@string/no_date"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"
            android:textSize="@dimen/shortcut_date_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/end_time"
            android:layout_margin="@dimen/shortcut_border_margin"
            android:text="@string/no_time"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"
            android:textSize="@dimen/shortcut_date_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
