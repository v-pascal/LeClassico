<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:text="@string/title_activity_pick_member"
        android:textColor="@android:color/black"
        android:textSize="@dimen/pick_member_title_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_margin="@dimen/pick_member_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/colorPrimaryMain"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <!-- Members list -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_members"
        tools:listitem="@layout/layout_member_item"
        tools:context=".activities.profile.MemberPickActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>