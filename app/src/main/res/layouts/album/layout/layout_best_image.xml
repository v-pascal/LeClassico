<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <View
        android:id="@+id/view_middle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/best_background_radius"/><!-- Middle -->

    <!-- Photo -->
    <FrameLayout
        android:background="@color/colorPrimarySetting"
        android:paddingStart="@dimen/best_background_radius"
        android:paddingEnd="@dimen/best_background_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:background="@drawable/best_photo_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_photo"
                android:padding="@dimen/best_background_radius"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </FrameLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/best_background_radius"/><!-- Bottom -->

</LinearLayout>