<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="top"
              android:paddingTop="@dimen/best_comment_info_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <!-- Comment -->
    <TextView
        android:id="@+id/text_comment"
        android:textSize="@dimen/best_comment_size"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <!-- Remove (command) -->
    <ImageView
        android:id="@+id/image_remove"
        android:src="@drawable/ic_close_white_18dp"
        android:tint="@android:color/black"
        android:background="@drawable/best_info_background"
        android:clickable="true"
        android:layout_width="@dimen/best_comment_cmd_size"
        android:layout_height="@dimen/best_comment_cmd_size">

        <tag android:id="@+id/tag_comment_id"/>
    </ImageView>

</LinearLayout>