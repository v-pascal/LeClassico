<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <!-- Image -->
    <include
        layout="@layout/layout_photo_image"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="@dimen/photo_comment_margin"
        android:layout_height="@dimen/photo_background_radius"/><!-- Separator -->

    <!-- Comment -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/photo_comments_background"
        android:padding="@dimen/comment_info_margin"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Album -->
            <TextView
                android:id="@+id/text_label_album"
                android:text="@string/album"
                android:textColor="@android:color/black"
                android:textSize="@dimen/photo_album_text_size"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_info_album"
                android:textColor="@android:color/white"
                android:textSize="@dimen/photo_album_text_size"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_toEndOf="@id/text_label_album"
                android:layout_marginStart="@dimen/comment_info_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- By -->
            <TextView
                android:id="@+id/text_label_provider"
                android:text="@string/by"
                android:textColor="@android:color/black"
                android:textSize="@dimen/photo_album_text_size"
                android:textStyle="bold"
                android:layout_below="@id/text_label_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_info_provider"
                android:textColor="@android:color/white"
                android:textSize="@dimen/photo_album_text_size"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_toEndOf="@id/text_label_provider"
                android:layout_below="@id/text_label_album"
                android:layout_marginStart="@dimen/comment_info_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Range -->
            <TextView
                android:id="@+id/text_label_range"
                android:text="@string/range"
                android:textColor="@android:color/black"
                android:textSize="@dimen/photo_album_text_size"
                android:textStyle="bold"
                android:layout_below="@id/text_label_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_info_range"
                android:textColor="@android:color/white"
                android:textSize="@dimen/photo_album_text_size"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_toEndOf="@id/text_label_range"
                android:layout_below="@id/text_label_provider"
                android:layout_marginStart="@dimen/comment_info_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Comments -->
            <TextView
                android:id="@+id/text_label_comments"
                android:text="@string/comments"
                android:textColor="@android:color/black"
                android:textSize="@dimen/photo_album_text_size"
                android:textStyle="bold"
                android:layout_below="@id/text_label_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <FrameLayout
            android:background="@drawable/comments_background"
            android:paddingStart="@dimen/comment_info_margin"
            android:paddingEnd="@dimen/comment_info_margin"
            android:layout_marginTop="@dimen/comment_info_margin"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>