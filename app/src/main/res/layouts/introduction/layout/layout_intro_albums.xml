<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:id="@+id/image_background"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:src="@drawable/intro_back"
        android:tint="@color/colorIntroAlbums"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <!-- Outdoor party -->
    <ImageView
        android:id="@+id/image_outdoor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:rotation="15"
        android:src="@drawable/party_outdoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Couple -->
    <ImageView
        android:id="@+id/image_couple"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:rotation="25"
        android:src="@drawable/couple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- DJ -->
    <ImageView
        android:id="@+id/image_dj"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:rotation="-20"
        android:src="@drawable/dj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Indoor party -->
    <ImageView
        android:id="@+id/image_indoor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:rotation="-10"
        android:src="@drawable/party_indoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Girls -->
    <ImageView
        android:id="@+id/image_girls"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:rotation="-35"
        android:src="@drawable/girls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Images container -->
    <ImageView
        android:id="@+id/image_container"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/container_padding_bottom"
        android:adjustViewBounds="true"
        android:src="@drawable/lc_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>