<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:theme="@style/LoginAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <!-- Internet connection -->
    <ImageView
        android:id="@+id/checked_internet"
        android:src="@drawable/forward_purple"
        android:layout_height="@dimen/progress_icon_size"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:text="@string/check_internet"
        android:textSize="@dimen/login_text_size"
        android:textColor="@android:color/black"
        android:layout_column="1"
        android:layout_width="@dimen/login_width"
        android:minWidth="@dimen/login_min_width"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"/>

    <!-- Identification -->
    <ImageView
        android:id="@+id/checked_identification"
        android:src="@drawable/forward_purple"
        android:layout_height="@dimen/progress_icon_size"
        android:visibility="invisible"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:text="@string/identification"
        android:textSize="@dimen/login_text_size"
        android:textColor="@android:color/black"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"/>

    <!-- Data synchronization -->
    <ImageView
        android:id="@+id/checked_synchro"
        android:src="@drawable/forward_purple"
        android:layout_height="@dimen/progress_icon_size"
        android:visibility="invisible"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:text="@string/data_synchro"
        android:textSize="@dimen/login_text_size"
        android:textColor="@android:color/black"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"/>

    <!-- Notification service -->
    <ImageView
        android:id="@+id/checked_notification"
        android:src="@drawable/forward_purple"
        android:layout_height="@dimen/progress_icon_size"
        android:visibility="invisible"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:text="@string/notification_service"
        android:textSize="@dimen/login_text_size"
        android:textColor="@android:color/black"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"/>

    <FrameLayout
        android:layout_row="4"
        android:layout_height="36dp"/>

    <!-- Status -->
    <TextView
        android:text="@string/status"
        android:textSize="@dimen/progress_text_size"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/progress_percentage"
        android:textSize="@dimen/progress_text_size"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="clip_horizontal|end"/>

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/progress_view"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_rowWeight="1"
        android:layout_gravity="fill_horizontal|top"/>

</GridLayout>