<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowDx="@dimen/comments_shadow"
        android:shadowDy="@dimen/comments_shadow"
        android:shadowRadius="@dimen/comments_radius"
        android:textSize="@dimen/comments_text_title"
        android:textStyle="bold"/>

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowDx="@dimen/comments_shadow"
        android:shadowDy="@dimen/comments_shadow"
        android:shadowRadius="@dimen/comments_radius"
        android:textSize="@dimen/comments_text_desc"
        android:textStyle="bold"
        android:typeface="serif"/>

</RelativeLayout>