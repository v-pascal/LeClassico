<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:id="@+id/image_background"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:src="@drawable/intro_map"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <!-- Green marker -->
    <ImageView
        android:id="@+id/image_green_marker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/marker_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Red marker -->
    <ImageView
        android:id="@+id/image_red_marker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/marker_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Blue marker -->
    <ImageView
        android:id="@+id/image_blue_marker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/marker_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Yellow marker -->
    <ImageView
        android:id="@+id/image_yellow_marker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/marker_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Images container -->
    <ImageView
        android:id="@+id/image_container"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/container_padding_bottom"
        android:adjustViewBounds="true"
        android:src="@drawable/lc_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>